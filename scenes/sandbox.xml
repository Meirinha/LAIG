        <component id="cake">
            <transformation>
                <transformationref id="transID" />
            </transformation>
            <animations>
                <!-- <animationref id="circular"/>
                <animationref id="linear"/>
                <animationref id="circular"/>  -->
            </animations>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <!-- <primitiveref id="cake"/> -->
                <!-- <primitiveref id="water"/> -->
                <!-- <primitiveref id="cake"/> -->
                <primitiveref id = "vehicle"/>
            </children>
        </component>


        <!-- ROOT -->
        <component id="rootScene">
            <transformation>
                <scale x="1.0" y="1.0" z="1.0" />
            </transformation>
            <materials>
                <material id="materialID" />
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="cake" />
            </children>
        </component>
    </components>
</yas>
